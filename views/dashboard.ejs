<%- include('partials/head') %> 

<body>
	<%- include('partials/nav') %> 
	
	<section class="places">
		<div class="header-intro">
			<h1> Welcome back, <span><%= user.name %></span> </h1>
			<blockquote> <i>"<%= user.reasonForTravel %>"</i> </blockquote>
		</div>
		<div>
			<ul class="places__list">
				<% for (let place of userPlaces) { %>
					<li class="place" style="background-image: url('<%= place.img %>'); border: solid 1px <%= place.color %>; border-left: solid 8px <%= place.color %>">
						<div class="place__info">
							<h2> <%= place.city %>, </h2>
							<h2> <%= place.country %> </h2>
							<div class="place__info__details">
								<p>Dep<span id="depart">art</span>: <span> <%= place.leaveDate %> </span></p>
							</div>
							<div class="place__info__details">
								<p>Ret<span id="return">urn</span>: <span>	<%= place.returnDate %> </span></p>
							</div>
						</div>
						<a class="go-to-icon go-to-place" href="/places/<%= place.id %>"><p><i class="arrow right"></i></p></a>
					</li>
					<% } %>
			</ul>
		</div>
		<div class="add-place">
			<a class="add-icon" href="/places/new">Add</a>
		</div>
	</section>
</body>

</html>