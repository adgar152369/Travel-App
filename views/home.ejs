<%- include('partials/head') %>

	<body class="dark-bg">
		<%- include('partials/nav') %>
			<section id="landing"
				style="background-image: url('https://images.unsplash.com/photo-1531347094902-936c323cccbe?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=774&q=80'); background-size: cover; background-position: center;">
				<div class="container">
					<h1>Welcome to the Travel Tracker</h1>
					<p>Journey on, wanderlust warriors.</p>
					<button>Get Started</button>
				</div>
			</section>
			<main>
				<%- include('components/about') %>
				<%- include('components/quick-guide') %>
				<section id="featured">
					<h3>Featured</h3>
					<ul id="featured-list">
						<% for( let featured of featuredPlaces) { %>
							<li class="card">
								<!-- <img src="https://via.placeholder.com/150x100" alt="image of destination"> -->
								<h4><%- featured.city %></h4>
								<div class="featured-explore">
									<p><%- featured.description %> </p>
									<button><a href="/places/<%- featured.id %>  ">Explore</a></button>
								</div>
							</li>
						<% } %>
					</ul>
				</section>
			</main>


			<%- include('partials/footer') %>

		<script src="/js/intersectionObserver.js"></script>
	</body>

	</html>